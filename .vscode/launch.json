    "version": "0.2.0",
    "configurations": [
        {
            "name": "CURRENTFILE",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.vscode/.env"
        },
        {
            "name": "Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "args": [
                "--config-name=train_diffusion_unet",
                "task_name=stack_d1",
                "n_demo=10"
            ],
            "envFile": "${workspaceFolder}/.vscode/.env"
        },
        {
            "name": "OnlineEval",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/pg_online_evaluator.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.env"
        },
        {
            "name": "TestEnvRunner",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/pg_test_env_runner.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.env"
        }
    ]
}